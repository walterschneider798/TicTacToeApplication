<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp" android:layout_marginRight="1dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:id="@id/f1"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Titelid"
            app:layout_constraintTop_toBottomOf="@+id/f1"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.072" android:textStyle="bold"
            tools:text="Spieler X ist an der Reihe"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/f1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" app:layout_constraintDimensionRatio="1:1" android:id="@+id/tableLayout"
            android:background="#000000">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f11" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp" android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f2" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp" android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f3" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f4" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f5" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="1dp" android:layout_marginTop="1dp" android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f6" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f7" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f8" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f9" android:layout_weight="1"
                    android:gravity="center" android:textSize="24sp"
                    android:background="#FFFFFF" android:layout_marginLeft="1dp" android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" android:layout_marginBottom="1dp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>